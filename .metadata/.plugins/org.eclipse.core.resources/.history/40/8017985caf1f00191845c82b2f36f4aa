import os, django
from django.template import Template, Context
import datetime
 
os.environ.setdefault('DJANGO_SETTINGS_MODULE', 'blogSys.settings')
django.setup()

rawTemp ='''
{% ifequal section 'sitenews' %}
    Site News
{% else %}
    No News Here
{% endifequal %}
'''

t = Template(rawTemp)
sections  = 'sitenew'

c = Context({'section' : sections})

print(t.render(c))